<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Radio de Actuación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio de actuación (km)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <SeekBar
            android:id="@+id/radiusSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300" />

        <TextView
            android:id="@+id/radiusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="0 km"
            android:textSize="14sp" />

        <!-- Medio de Transporte -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medio de Transporte"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/transportRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_private_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privado" />

            <RadioButton
                android:id="@+id/radio_public_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Público" />
        </RadioGroup>

        <!-- Título de Categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Checkboxes de Categoría -->
        <CheckBox
            android:id="@+id/checkbox_natural_parks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parques Naturales y Reservas" />

        <CheckBox
            android:id="@+id/checkbox_museums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museos y Galerías de Arte" />

        <CheckBox
            android:id="@+id/checkbox_historic_monuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumentos Históricos" />

        <CheckBox
            android:id="@+id/checkbox_religious_monuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumentos Religiosos" />

        <CheckBox
            android:id="@+id/checkbox_modern_architecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edificios y Arquitectura Moderna" />

        <CheckBox
            android:id="@+id/checkbox_cultural_attractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atracciones Culturales" />

        <CheckBox
            android:id="@+id/checkbox_urban_zones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zonas Urbanas y Barrios Históricos" />

        <CheckBox
            android:id="@+id/checkbox_natural_landscapes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paisajes Naturales" />

        <!-- Título de Duración de Visita -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración de la visita"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Checkboxes de Duración -->
        <CheckBox
            android:id="@+id/checkbox_duration_less_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menos de 1h" />

        <CheckBox
            android:id="@+id/checkbox_duration_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entre 1 y 2h" />

        <CheckBox
            android:id="@+id/checkbox_duration_2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entre 2 y 4h" />

        <CheckBox
            android:id="@+id/checkbox_duration_more_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más de 4h" />

        <!-- Título de Entrada -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrada"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Checkboxes de Entrada -->
        <CheckBox
            android:id="@+id/checkbox_entry_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gratuita" />

        <CheckBox
            android:id="@+id/checkbox_entry_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De pago" />

        <!-- Título de Accesibilidad PMR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accesibilidad PMR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Checkboxes de Accesibilidad -->
        <CheckBox
            android:id="@+id/checkbox_accessibility_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí" />

        <CheckBox
            android:id="@+id/checkbox_accessibility_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

        <!-- Título de Audioguía -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audioguía"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Checkboxes de Audioguía -->
        <CheckBox
            android:id="@+id/checkbox_audio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí" />

        <CheckBox
            android:id="@+id/checkbox_audio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </LinearLayout>
</ScrollView>
